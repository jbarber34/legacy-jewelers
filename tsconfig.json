{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "plotly.js": ["../node_modules/plotly.js/lib/core.js"]
    },
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "plotly.js.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/_app.jsx",
    "src/pages/_app.jsx"
  ],
  "exclude": ["node_modules"]
}
